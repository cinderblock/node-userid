{
  "name": "userid",
  "version": "1.3.0-beta",
  "description": "Lookup uid and gid information in node.js. Uses native POSIX bindings, not processes.",
  "license": "Public Domain",
  "author": "Jen Andre <jandre@gmail.com>",
  "contributors": [
    "Cameron Tacklind <cameron@tacklind.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cinderblock/node-userid.git"
  },
  "type": "module",
  "main": "src/userid.cjs",
  "types": "src/userid.d.ts",
  "files": [
    "src/userid.{d.ts,hh,cc}",
    "src/sources.cc",
    "src/Ids.cc",
    "src/Gid.cc",
    "src/Gids.cc",
    "src/UserName.cc",
    "src/GroupName.cc",
    "src/lib/BufferSize.{cc,hh}",
    "src/lib/Error.{cc,hh}",
    "src/lib/FunctionArg.{cc,hh}",
    "binding.gyp"
  ],
  "os": [
    "!win32"
  ],
  "engines": {
    "node": ">=8.4.0"
  },
  "scripts": {
    "check": "npm run prettier && npm run lint && npm run spelling",
    "prettier": "prettier \"**\" \".*/**\" --check",
    "lint": "npm run lint-c && npm run lint-ts",
    "lint-c": "node scripts/clang-tidy.mjs src/sources.cc",
    "lint-ts": "eslint \"**\"",
    "spelling": "cspell \"**\" \".*/**\"",
    "test": "cross-env TS_NODE_PROJECT='./test/tsconfig.json' mocha",
    "coverage": "npm run build-coverage && npm run coverage-test && npm run coverage-convert",
    "coverage-test": "nyc --reporter=lcov npm test",
    "coverage-convert": "npm run coverage-convert-capture && npm run coverage-convert-extract && npm run coverage-convert-combine",
    "coverage-convert-capture": "lcov --capture --directory . --output-file coverage/cc.info",
    "coverage-convert-extract": "lcov --extract coverage/cc.info '*.cc' --output-file coverage/cc.info",
    "coverage-convert-combine": "lcov --add-tracefile coverage/cc.info --add-tracefile coverage/lcov.info --output-file coverage/lcov.info",
    "install": "npm run build",
    "clean": "node-gyp clean",
    "build": "node-gyp rebuild",
    "build-coverage": "cross-env GENERATE_COVERAGE=\"yes\" npm run build"
  },
  "gypfile": true,
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^4.2.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "cross-env": "^7.0.3",
    "cspell": "^5.14.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^9.1.3",
    "node-gyp": "^8.4.1",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "should": "^13.2.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
